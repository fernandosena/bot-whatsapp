# WhatsApp Business SaaS - Docker Environment Variables
# Copie este arquivo para .env.docker e preencha com suas credenciais

##############################################
# MongoDB
##############################################

MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin123

# Mongo Express (Interface Web)
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin123

##############################################
# JWT
##############################################

JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-base64-32
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

##############################################
# URLs
##############################################

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

##############################################
# Payment Gateways
##############################################

# Mercado Pago (https://www.mercadopago.com.br/developers)
MERCADOPAGO_ACCESS_TOKEN=TEST-your-mercadopago-access-token

# Stripe (https://dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayPal (https://developer.paypal.com)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

##############################################
# Email (Optional)
##############################################

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

##############################################
# Sentry (Optional)
##############################################

SENTRY_DSN=your-sentry-dsn

##############################################
# Environment
##############################################

ENVIRONMENT=development
DEBUG=True
